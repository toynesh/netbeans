<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.pdsl.sms.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Bulk</servlet-name>
        <servlet-class>com.pdsl.sms.Bulk</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>com.pdsl.sms.Admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Single</servlet-name>
        <servlet-class>com.pdsl.sms.Single</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageGroups</servlet-name>
        <servlet-class>com.pdsl.sms.ManageGroups</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Bulk</servlet-name>
        <url-pattern>/Bulk</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Single</servlet-name>
        <url-pattern>/Single</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageGroups</servlet-name>
        <url-pattern>/ManageGroups</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
