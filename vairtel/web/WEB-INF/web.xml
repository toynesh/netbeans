<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetTransactionPhone</servlet-name>
        <servlet-class>com.pdsl.vendit.airtel.GetTransactionPhone</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.pdsl.vendit.airtel.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTransactionMeter</servlet-name>
        <servlet-class>com.pdsl.vendit.airtel.GetTransactionMeter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTransactionCode</servlet-name>
        <servlet-class>com.pdsl.vendit.airtel.GetTransactionCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMeterDetails</servlet-name>
        <servlet-class>com.pdsl.vendit.airtel.GetMeterDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Vend</servlet-name>
        <servlet-class>com.pdsl.vendit.airtel.Vend</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTransactionPhone</servlet-name>
        <url-pattern>/GetTransactionPhone</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTransactionMeter</servlet-name>
        <url-pattern>/GetTransactionMeter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTransactionCode</servlet-name>
        <url-pattern>/GetTransactionCode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMeterDetails</servlet-name>
        <url-pattern>/GetMeterDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Vend</servlet-name>
        <url-pattern>/Vend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
